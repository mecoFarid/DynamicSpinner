<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchableView">
        <attr name="ss_icon_closeSearchView" format="reference"/>
        <attr name="ss_icon_openSearchView" format="reference"/>
        <attr name="ss_iconColor_closeSearcView" format="color"/>
        <attr name="ss_iconColor_openSearchView" format="color"/>
        <attr name="ss_isSearchable" format="boolean"/>
        <attr name="ss_textSelectionMode"/>
    </declare-styleable>

    <attr name="ss_textSelectionMode" format="enum">
        <enum name="end" value="0"/>
        <enum name="start" value="1"/>
        <enum name="all" value="2"/>
    </attr>
</resources>